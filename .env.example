# AWS Bedrock Configuration
# ========================================
# Get these credentials from the hackathon organizers
AWS_BEARER_TOKEN_BEDROCK=your_aws_bearer_token_here
AWS_REGION=us-east-1

# AWS Bedrock Model Configuration
# ========================================
# Model for conversation and reasoning (Claude Sonnet 4.5 - latest)
AWS_BEDROCK_MODEL=anthropic.claude-sonnet-4-5-v1:0

# Storyblok Strata Configuration
# ========================================
# Your Storyblok access token and space ID
STORYBLOK_TOKEN=your_storyblok_token_here
STORYBLOK_SPACE_ID=88751
STORYBLOK_API_BASE=https://api-staging-d1.storyblok.com

# Note: When using storyblok-js-client, pass STORYBLOK_API_BASE as the 'endpoint' parameter
# Example: new StoryblokClient({ accessToken: STORYBLOK_TOKEN, endpoint: STORYBLOK_API_BASE })

# Application Configuration
# ========================================
# Backend server settings
PORT=8000
HOST=0.0.0.0
DEBUG=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Optional: Logging and Performance
# ========================================
LOG_LEVEL=INFO
ENABLE_METRICS=false

# Optional: Rate Limiting
# ========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
